 <sql id="houseListCommon1">
 	from house h
		left join houseresource hs on h.houseId = hs.houseId
		left join area es on h.estateId = es.areaId
		left join area a on a.areaId = es.parentId
		left join area b on b.areaId = a.parentId
 </sql>
 <sql id="houseListCommon2">
 	where h.`status`=1 
		<choose>
			<when test="town != null and town != 0">
				and a.areaId = #{town,jdbcType=INTEGER}
			</when>
			<otherwise>
				<if test="district != null and district != 0">
					and b.areaId = #{district,jdbcType=INTEGER} 
				</if>
			</otherwise>
		</choose>
		<if test="estateName != null and estateName != ''">
			and es.`name` like concat('%',#{estateName,jdbcType=VARCHAR},'%') 
		</if>
		<!-- 装修 -->
		<if test="decorateType != null and decorateType != 0">
			and h.decorateType = #{decorateType,jdbcType=INTEGER}
		</if>
		<!-- 户型 -->
		<!-- 厅数 -->
		<if test="livingRoomSum != null and livingRoomSum != 0">
			and h.livingRoomSum = #{livingRoomSum,jdbcType=INTEGER}
		</if>
		<!-- 房数 -->
		<if test="bedroomSum != null and bedroomSum != 0">
			and h.bedroomSum = #{bedroomSum,jdbcType=INTEGER}
		</if>
		<!-- 卫数 -->
		<if test="wcSum != null and wcSum != 0">
			and h.wcSum = #{wcSum,jdbcType=INTEGER}
		</if>
		<!-- 最低价格 -->
		<if test="minPrice != null">
			and hs.rentPrice &gt; #{minPrice,jdbcType=DECIMAL}
		</if>
		<!-- 最高价格 -->
		<if test="maxPrice != null">
			and hs.rentPrice &lt; #{maxPrice,jdbcType=DECIMAL}
		</if>
 </sql>
 
